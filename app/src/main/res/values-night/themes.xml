    <!--SPLASCREEN FOR APIS <= 30 ANDROID 11-->
    <style name="SplashScreenTheme" parent="Theme.SplashScreen.IconBackground">

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowSplashScreenBackground">@color/colorSurface</item>

        <!--<item name="android:windowBackground">@drawable/splash_api_android_down_30</item>-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/img432</item>
        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="postSplashScreenTheme">@style/Theme.MoviesHD</item>
    </style>

    <style name="DialogTheme" parent="Theme.MoviesHD">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Estilo personalizado para BottomNavigationView -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">

        <!-- Color de fondo -->
